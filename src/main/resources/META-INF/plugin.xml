<idea-plugin>
    <id>de.ur.mi.BehaviourInspector</id>
    <name>Behaviour Inspector</name>
    <vendor email="alexander.bazo@ur.de" url="https://mi.ur.de">Lehrstuhl f√ºr Medieninformatik</vendor>

    <description>A IntelliJ IDEA plugin to log user behaviour during programming assignments.</description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <postStartupActivity implementation="app.App" />
        <applicationService serviceImplementation="app.services.application.ApplicationService"/>
        <applicationService serviceImplementation="app.services.log.LogService"/>
    </extensions>

    <actions>
        <group id="BehaviourInspector" text="Behaviour Inspector" description="Behaviour Inspector Menu"  popup="true">
            <action id="VssIntegration.TestAction" class="app.ui.SessionAction" text="Start Session" description="Start recording interaction behaviour."/>
            <separator/>
            <add-to-group group-id="MainMenu" relative-to-action="HelpMenu" anchor="after"/>
        </group>
    </actions>

    <idea-version since-build="2019.1"/>

</idea-plugin>